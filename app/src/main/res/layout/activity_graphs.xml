<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.GraphsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/stateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:textSize="11dp"
            android:text="Start"/>

        <Button
            android:id="@+id/configButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:textSize="11dp"
            android:text="Config"/>

        <Button
            android:id="@+id/nextViewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:textSize="11dp"
            android:text="List View ->"/>

    </LinearLayout>

    <TextView
        android:id="@+id/sampleTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.jjoe64.graphview.GraphView
                android:id="@+id/pressureGraph"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginTop="20dp" />


            <com.jjoe64.graphview.GraphView
                android:id="@+id/humidityGraph"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginTop="20dp" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/temperatureGraph"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginTop="20dp" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/yawGraph"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginTop="20dp" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/pitchGraph"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginTop="20dp" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/rollGraph"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginTop="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
